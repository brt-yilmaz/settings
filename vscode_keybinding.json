[
  {
    "key": "cmd+shift+l",
    "command": "editor.action.insertSnippet",
    "when": "editorTextFocus",
    "args": {
      "snippet": "console.log('${TM_SELECTED_TEXT}$1')$2;"
    }
  },
  {
    "key": "cmd+l",
    "command": "editor.action.insertSnippet",
    "when": "editorTextFocus",
    "args": {
      "snippet": "console.log('\\n\\x1b[2m\\x1b[33m%s\\x1b[90m ${TM_FILENAME}, Line: ${TM_LINE_NUMBER}\\n\\x1b[32m%s\\n\\x1b[33m%s\\x1b[0m','↓↓ ${TM_SELECTED_TEXT} ↓↓',JSON.stringify(${TM_SELECTED_TEXT}),'↑↑ ${TM_SELECTED_TEXT} ↑↑');$0"
    }
  },
  {
    "key": "cmd+shift+j",
    "command": "workbench.action.terminal.focusNext",
    "when": "terminalFocus"
  },
  {
    "key": "alt+l",
    "command": "-codeium.chatAboutBlock",
    "when": "editorTextFocus && !inlineSuggestionsVisible"
  },
  {
    "key": "ctrl+shift+alt+cmd+alt+c", // open new terminal
    "command": "workbench.action.terminal.new"
  },
  {
    "key": "ctrl+shift+alt+cmd+alt+d", // delete terminal
    "command": "workbench.action.terminal.kill"
  },
  {
    "key": "ctrl+shift+alt+cmd+alt+j", // next terminal
    "command": "workbench.action.terminal.focusNext"
  },
  {
    "key": "ctrl+shift+alt+cmd+alt+k", // previous terminal
    "command": "workbench.action.terminal.focusPrevious"
  },
  {
    "key": "ctrl+shift+alt+cmd+f", // next file
    "command": "workbench.action.nextEditor",
    "when": "editorTextFocus"
  },
  {
    "key": "ctrl+shift+alt+cmd+r", // next window
    "command": "workbench.action.focusNextGroup"
  },
  {
    "key": "ctrl+shift+alt+cmd+alt+o", // open definiton
    "command": "editor.action.revealDefinition",
    "when": "editorHasDefinitionProvider && editorTextFocus"
  },
  {
    "key": "ctrl+shift+alt+cmd+alt+p", // preview definiton
    "command": "editor.action.peekDefinition",
    "when": "editorHasDefinitionProvider && editorTextFocus"
  },
  {
    "key": "ctrl+shift+alt+cmd+alt+b", // preview definiton
    "command": "workbench.action.navigateBack",
    "when": "canNavigateBack"
  },
  {
    "key": "ctrl+shift+alt+cmd+u",
    "command": "cursorMove",
    "args": { "to": "up", "by": "line", "value": 5 },
    "when": "editorTextFocus"
  },
  {
    "key": "ctrl+shift+alt+cmd+p",
    "command": "cursorMove",
    "args": { "to": "down", "by": "line", "value": 5 }
  }
]
